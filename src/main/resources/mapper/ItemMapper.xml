<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.njupt.bit.entries1.mapper.ItemMapper">

    <select id="listItem" resultType="java.util.HashMap">
        SELECT id, name, brand, price, category
        FROM shoppinglist
    </select>

    <select id="listShoppingCart" resultType="java.util.HashMap">
        SELECT id, name, brand, price, category
        FROM shoppinglist
        WHERE mode = 1
    </select>

    <select id="addToCart" parameterType="java.lang.Integer">
        UPDATE shoppinglist
        SET mode=1
        WHERE id = #{id}
    </select>

    <select id="removeFromCart" parameterType="java.lang.Integer">
        UPDATE shoppinglist
        SET mode=0
        WHERE id = #{id}
    </select>
</mapper>
